<div class="portfolio-modal modal fade" id="Modal<%= chill_spot.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal"><%= image_tag 'close-icon.svg', :alt=>"Close modal" %></div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Project Details Go Here-->
                            <h2 class="text-uppercase"><%= chill_spot.name %></h2>
                            <p class="item-intro text-muted"><%= chill_spot.prefecture.name %></p>
                            <%= image_tag chill_spot.spot_image.url, :class=>"img-fluid d-block mx-auto" %>
                            <ul class="list-inline">
                                <li>Date: <%= chill_spot.created_at.strftime('%Y/%m/%d') %></li>
                                <li>Registered: <%= chill_spot.user.name %></li>
                                <li>Category: SPOT</li>
                            </ul>
                            <button class="btn btn-primary" data-dismiss="modal" type="button">
                                <i class="fas fa-times mr-1"></i>
                                Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>